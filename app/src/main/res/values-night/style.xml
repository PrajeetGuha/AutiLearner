<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="HiddenTitleTheme" parent="Theme.AutiLearner">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="BoldText">
        <item name="android:fontFamily">@font/kollektif_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="NormalText">
        <item name="android:fontFamily">@font/kollektif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="splashAnimation">
        <item name="lottie_fileName">owl(night).json</item>
    </style>
    <style name="primaryButton" parent="Widget.Material3.Button.Icon">
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:fontFamily">@font/kollektif_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="secondaryButton" parent="Widget.Material3.Button.Icon">
        <item name="android:backgroundTint">@color/secondaryLightColor</item>
        <item name="android:fontFamily">@font/kollektif_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="MainText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
    </style>
    <style name="RedirectText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:colorPressedHighlight">@color/secondaryLightColor</item>
    </style>
    <style name="FieldBoxLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="errorEnabled">true</item>
    </style>
    <style name="TextField" parent="NormalText">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>
    <style name="OptionButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">180sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:fontFamily">@font/kollektif</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>